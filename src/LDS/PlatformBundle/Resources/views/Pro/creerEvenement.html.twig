{% extends "LDSPlatformBundle::layout.html.twig" %} 
{% block title %}
Créer un événement
{% endblock %}

{% block ldsplatform_body %}


<div class="container-fluid">
  <h3 class="text-center">Créer un événement</h3>


  {{ form_start(form, {'attr': {'class': 'well col-xs-8 col-sm-8 col-md-8 col-lg-6 col-xs-offset-2 col-sm-offset-2 col-md-offset-2 col-lg-offset-3'}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}

  <div class="row">

   <div class="col-xs-12 col-md-4 col-sm-4 col-lg-4 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
    {# Génération du label + error + widget pour un champ. #}
    {{ form_row(form.nom) }}
    {% if listeErreurs["erreur_attente"] is defined %}
  <p class="alert alert-danger"> {{ listeErreurs["erreur_attente"] }}</p>
  {% endif %}
     {% if listeErreurs["erreur_event"] is defined %}
  <p class="alert alert-danger"> {{ listeErreurs["erreur_event"] }}</p>
  {% endif %}
  
    {{ form_row(form.description) }}
  </div>



  <div class="col-xs-12 col-md-4 col-sm-4 col-lg-4 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
    {{ form_row(form.photo1) }}
    {{ form_row(form.photo2) }}
    {{ form_row(form.photo3) }}
  </div>
</div>


<div class="row">
  <div class="col-lg-12 col-sm-offset-1 col-md-offset-1 col-lg-offset-1">
    {{ form_row(form.dateDebut) }}
    {{ form_row(form.dateFin) }}
  

    {{ form_row(form.heureDebut) }}
    {{ form_row(form.heureFin) }}
  </div>
</div>


<div class="text-center">
  {{ form_widget(form.creer, {'attr': {'class': 'btn btn-primary'}}) }}
</div>

{{ form_rest(form) }}

{# Fermeture de la balise <form> du formulaire HTML #}
  {{ form_end(form) }}
</div>

{% endblock ldsplatform_body %}